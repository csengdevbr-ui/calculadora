{
  "name": "windows-neon-calculator",
  "version": "1.0.0",
  "description": "Windows Calculator Clone with Neon Green Theme",
  "main": "src/main.js",
  "scripts": {
    "test": "node --test \"tests/**/*.js\"",
    "build": "electron-builder --win",
    "start": "electron .",
    "pack": "electron-builder --dir"
  },
  "keywords": ["calculator", "electron", "windows", "neon"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {},
  "build": {
    "appId": "com.calculator.windowsneon",
    "productName": "Windows Neon Calculator",
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "index.html",
      "styles.css",
      "calculator.js"
    ]
  }
}
